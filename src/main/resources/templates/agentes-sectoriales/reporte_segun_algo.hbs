  <script>
    const chart = document.getElementById("evolucionChart");
    const colors = ['red', 'green', 'blue', 'orange', 'yellow', 'black', 'purple'];
    const text = `{{titulo}} {{ unidad }}`
    const data = {{ valores }}
    const labels = `{{criterio}}`.split(',')
    labels[0] = labels[0].slice(1);
    labels[labels.length - 1] = labels[labels.length - 1].slice(0, -1)
    let backgroundColor = [];
    for (let i = 0; i < labels.length; i++) {
      backgroundColor.push(colors[Math.floor(Math.random() * colors.length)]);
    }
    chart.style.width = '100%';
    chart.style.height = '100%';
    new Chart(chart, {
      type: `{{tipo}}`,
      data: {
        labels,
        datasets: [{
          backgroundColor,
          data
        }]
      },
      options: {
        scales: {
          xAxes: `{{tipo}}` === 'pie' ? 1 : [{
            barPercentage: 0.2
          }]
        },
        legend: {
          display: `{{tipo}}` === 'pie' ? true : false
        },
        title: {
          display: true,
          text
        }
      }
    });
  </script>
